        xmlns:local="clr-namespace:task2.Forms"
        mc:Ignorable="d"
        Title="addRecordForm" Height="450" Width="400"
        Icon="{StaticResource school_ico}">
    <Grid>
        <StackPanel HorizontalAlignment="Center" Width="300">
