<Window x:Class="task2.Forms.addForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:task2.Forms"
        mc:Ignorable="d"
        Title="addForm" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" Width="400" Margin="0,20,0,0">
            <TextBox Text="Наименование услуги"></TextBox>
            <TextBox Text="{Binding Title}"></TextBox>
            <TextBox Text="Стоимость"></TextBox>
            <TextBox Text="{Binding Cost}"></TextBox>
            <TextBox Text="Скидка"></TextBox>
            <TextBox Text="{Binding Discount}"></TextBox>
            <TextBox Text="Продолжительность (в секундах)"></TextBox>
            <TextBox Text="{Binding DurationInSeconds}"></TextBox>
            <Button Name="saveButton" Width="190" Content="Сохранить" Margin="0,20,0,0" Click="saveButton_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
